@dp.message(lambda msg: msg.content_type == ContentType.PHOTO)----- photo uchun
async def photo_handler (message: Message) -> None:
    await message.answer('rasm keldi')

@dp.message(lambda msg: msg.content_type == ContentType.DOCUMENT)----- document uchun
async def document_handler(message: Message) -> None:
    await message.answer('document keldi')


@dp.message(lambda msg: msg.content_type == ContentType.AUDIO)----- audio uchun
async def audio_handler(message: Message):
    await message.answer("audio keldi")

